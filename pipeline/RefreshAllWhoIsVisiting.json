{
	"name": "RefreshAllWhoIsVisiting",
	"properties": {
		"activities": [
			{
				"name": "LookupDateRangePeriods",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": false,
							"wildcardFileName": "wiv_date_range_periods.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"dataset": {
						"referenceName": "RootFolderDataset",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "DateRangePeriod",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "LookupDateRangePeriods",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('LookupDateRangePeriods').output.value",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "ExecuteExtractAnalyticsByDateRangePeriod",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "ExtractVisitorFeed",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"DateFrom": {
										"value": "@item().dateFrom",
										"type": "Expression"
									},
									"DateTo": {
										"value": "@item().dateTo",
										"type": "Expression"
									}
								}
							}
						}
					]
				}
			},
			{
				"name": "ExtractVisitors",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "DateRangePeriod",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": "visitor_feed",
							"wildcardFileName": "*.json"
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['id']"
								},
								"sink": {
									"name": "id",
									"type": "Int64"
								}
							},
							{
								"source": {
									"path": "['name']"
								},
								"sink": {
									"name": "name",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['countryShortName']"
								},
								"sink": {
									"name": "countryShortName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['region']"
								},
								"sink": {
									"name": "region",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['firstVisited']"
								},
								"sink": {
									"name": "firstVisited",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['company']"
								},
								"sink": {
									"name": "company",
									"type": "Boolean"
								}
							},
							{
								"source": {
									"path": "['ignored']"
								},
								"sink": {
									"name": "ignored",
									"type": "Boolean"
								}
							}
						],
						"collectionReference": "$['data']"
					}
				},
				"inputs": [
					{
						"referenceName": "RootJsonFolderDataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "WivVisitorsCsvDataset",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "DedupVisitors",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "ExtractVisitors",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "DedupVisitorsDataflow",
						"type": "DataFlowReference"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			},
			{
				"name": "ExecuteLoadWhoIsVisiting",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "DedupVisitors",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "LoadWhoIsVisiting",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true
				}
			}
		],
		"concurrency": 1,
		"annotations": []
	}
}